# GigFlow Server Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to version control

# ===========================
# Database Configuration
# ===========================

# MongoDB Connection String
# For local development:
# MONGO_URI=mongodb://localhost:27017/gigflow
# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/gigflow?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/gigflow

# ===========================
# Authentication
# ===========================

# JWT Secret Key (use a strong, random string)
# Generate with: openssl rand -base64 32
# Example: 5f3a8c2b7d1e9a4f6c8e2a1d3f5a7b9c
JWT_SECRET=your_jwt_secret_key_here

# ===========================
# Server Configuration
# ===========================

# Server Port
PORT=4000

# Node Environment
# Values: development, production, test
NODE_ENV=development

# Client URL (for CORS configuration)
# Development: http://localhost:5173
# Production: https://yourdomain.com
CLIENT_URL=http://localhost:5173

# ===========================
# Socket.IO Configuration
# ===========================

# Socket.IO will use the CLIENT_URL for CORS settings
# No additional configuration needed here
